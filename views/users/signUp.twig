{% extends "layout.twig" %}
{% block title %} {{ title }} {% endblock title %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
                
                <br>
                <!-- Jumbotron -->
                <div class="jumbotron">
                         {% if success_msg %}
                         <div class="alert alert-success" role="alert">
                          {{ success_msg }}
                         </div>
                         {% endif %}          
                    <div class="row">
                      <div class="col-md-8 offset-md-2">
                            <h1 class="mx-auto text-center"><i class="fa fa-user-plus"></i>&nbsp; Sign Up</h1> 
                            <form action="/u/signup" method="post">
                              <div class="form-row">
                                <div class="form-group col-sm-6">
                                  <label for="firstname">First Name:</label>
                                  <input type="text" class="form-control" name="firstname" id="firstname" placeholder="First name">
                                </div>
                                <div class="form-group col-sm-6">
                                  <label for="lastname">Last Name:</label>
                                  <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Last name">
                                </div>
                              </div>
                              <div class="form-group">
                                <label for="email">Email Address:</label>
                                <input type="text" class="form-control" name="username" id="email" placeholder="example@gmail.com">
                              </div>
                              <div class="form-group">
                                <label for="pwd">Password:</label>
                                <input type="password" class="form-control" name="password" id="pwd" placeholder="********">
                              </div>
                              <div class="form-group">
                                <label for="rpwd">Confirm Password:</label>
                                <input type="password" class="form-control" name="rpassword" id="rpwd" placeholder="********">
                              </div>
                              <button type="submit" class="btn btn-warning btn-block">Sign Up</button>
                            </form>
                            <p>Already have an account? <a href="/u/signin">Sign-In</a></p>
                            <p>or go <a href="/">home</a></p>
                      </div>
                    </div>
                  
                </div>
        </div>
    </div>
</div>
{% endblock body %}