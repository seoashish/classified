{% extends "./layout.twig" %}
{% block title %} {{ title }} {% endblock title %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
                {% if success_msg %}
                <div class="alert alert-success" role="alert">
                    {{success_msg}}
                </div>
                {% else %}
                <br class="d-none d-md-block">
                <br>
                <br>
                {% endif %}

                <!-- Jumbotron -->
                <div class="jumbotron">
                  
                    <div class="row">
                      <div class="col-md-8 offset-md-2">
                            <h1 class="mx-auto text-center"><i class="fas fa-question"></i>&nbsp; Forgot Password</h1>
                            <br> 
                            <h4 class="text-primary">Forgot your password?</h4>
                            <p><i class="fa fa-info text-danger"></i>&nbsp; Enter your email address and we will send you instructions on how to reset your password.</p>
                            <form action="/u/forgot" method="post">
                              <div class="form-group">
                                {% if errors.username %}
                                <label for="email">Email Address:</label>
                                <input type="text" class="form-control is-invalid" name="username" id="email" required>
                                <div class="invalid-feedback">
                                    {{errors.username.msg}}
                                </div>
                                {% else %}
                                <label for="email">Email Address:</label>
                                <input type="text" class="form-control" name="username" id="email" value="{{users.username}}" required>
                                {% endif %}
                              </div>
                              <button type="submit" class="btn bg-limegreen text-light btn-block">Reset Password</button>
                            </form>
                            <p>Need an account? <a href="/u/signup">Sign-Up</a></p>
                            <p>or go <a href="/">home</a></p>
                      </div>
                    </div>
                  
                </div>
                <br>
                <br>
        </div>
    </div>
</div>
{% endblock body %}