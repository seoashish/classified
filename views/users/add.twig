{% extends "layout.twig" %}
{% block title %} {{ title }} {% endblock title %}
{% block head%}
<link rel="stylesheet" href="css/custom_user.css">
{% endblock head%}

{% block body %}
<!-- Header Section -->
<div id="user-nav" class="d-flex flex-column flex-md-row align-items-md-center bg-whitesmoke p-2">
  <div class="brand pl-2 align-self-center "><a href="/">
  <img src="/demo.png" width="40" height="40" alt="logo">
  <h2 class="pl-1">Classified</h2>
  </a></div>

  <div class="d-flex align-items-center ml-md-auto">
      <p id="post_add" class="font-weight-bold mb-0 mr-5"><a href="/u/dashboard">POST YOUR AD</a></p>
      <p id="login_btn" class="mb-0 ml-auto"><a class="signin font-weight-bold" href="/u/signin">SIGN IN</a><a class="signup font-weight-bold" href="/u/signup"> /SIGN UP</a></p>
  </div>
</div>
<!-- Header Section end -->

<!-- main content box -->
<div class="main-box d-flex">
    <!-- side menu bar -->
    <div class="side-menu-bar bg-dark">
        <div class="ml-2 mt-3">
            <ul class="list-unstyled">
                <li ><a class="text-light" href="/u/dashboard">VIEW CLASSIFIED</a></li>
                <li><a class="text-light" href="/u/add">ADD CLASSIFIED</a></li>
                <li><a class="text-light" href="/u/setting">SETTING</a></li>
            </ul>
        </div>
    </div>
    <!-- content box-->
    <div class="content-box w-100">
            {% if success %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ success }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {% endif %}
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                            <form>
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" name="title">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                            <div class="form-group">
                                <label for="website">Website</label>
                                <input type="text" class="form-control" id="website" name="website">
                            </div>
                            <div class="form-group">
                                <label for="mobile">Mobile</label>
                                <input type="text" class="form-control" id="mobile" name="mobile">
                            </div>
                            <button type="submit" class="btn bg-limegreen text-light">Submit</button>
                            </form>
                    </div>
                </div>
            </div>
            <!-- footer section start -->
            <div class="container-fluid">
              <footer class="row bg-dark">
                  <div class="col-sm-10 col-md-8 offset-sm-1 offset-md-2">
                    <div class="row">
                      <div class="col-sm-4">
                          <div class="p-2">
                                <h4 class="text-light font-weight-normal">Company</h4>
                                <ul class="list-unstyled">
                                    <li><a href="#" class="text-light"><i class="fas fa-angle-right pr-1"></i>Contact us</a></li>
                                    <li><a href="#" class="text-light"><i class="fas fa-angle-right pr-1"></i>About us</a></li>
                                    <li><a href="#" class="text-light"><i class="fas fa-angle-right pr-1"></i>Blogs</a></li>
                                    <li><a href="#" class="text-light"><i class="fas fa-angle-right pr-1"></i>Terms and Conditions</a></li>
                                    <li><a href="#" class="text-light"><i class="fas fa-angle-right pr-1"></i>Privacy Policy</a></li>
                                </ul>
                          </div>    
                      </div>
                      <div class="col-sm-4">
                            <div class="p-2">
                                    <h4 class="text-light font-weight-normal">Follow us</h4>
                                    <ul class="list-unstyled">
                                        <li>
                                            <a href="#" class="text-light"><i class="fab fa-facebook-square fa-2x pr-1"></i></a>
                                            <a href="#" class="text-light"><i class="fab fa-twitter-square fa-2x pr-1"></i></a>
                                            <a href="#" class="text-light"><i class="fab fa-google-plus-square fa-2x pr-1"></i></a>
                                        </li>
                                    </ul>
                            </div>
                      </div>
                      <div class="col-sm-4">
                            <div class="p-2">
                                    <h4 class="text-light font-weight-normal">Location</h4>
                                    
                                    
                            </div>
                      </div>
                    </div>
                  </div>
                </footer>
                
                <!--     copyright     -->
                <div class="row bg-limegreen">
                    <div class="col-sm-12">
                    <p class="text-sm-center text-light m-0">All Rights Reserved <i class="fas fa-copyright"></i> 2019 Classified</p>
                    </div>
                </div>
                <!--    copyright end   -->
                
            </div>
    </div>
</div>






{% block script %}
<script src="js/custom_user.js"></script>
{% endblock script %}
{% endblock body %}