{% extends "./layout.twig" %}
{% block title %} {{ title }} {% endblock title %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
                <br class="d-none d-md-block">
                <br>
                <br>

                <!-- Jumbotron -->
                <div class="jumbotron">
                  
                    <div class="row">
                      <div class="col-md-8 offset-md-2">
                            <h1 class="mx-auto text-center"><i class="fas fa-undo"></i>&nbsp; Reset Your Password</h1>
                            <br> 
        
                            <form action="/u/reset" method="post">
                              <div class="form-group">
                                {% if users.username %}
                                <label for="">Email Address:</label>
                                <input type="text" class="form-control-plaintext" name="username" value="{{users.username}}" readonly>                              
                                {% else %}
                                <label for="">Email Address:</label>
                                <input type="text" class="form-control-plaintext" name="username" value="{{email}}" readonly>                              
                                {% endif %}
                              </div>
                              <div class="form-group">
                                {% if errors.newpassword %}
                                <label for="password">New Password:</label>
                                <input type="password" class="form-control is-invalid" name="newpassword" id="password" required>
                                <div class="invalid-feedback">
                                    {{ errors.newpassword.msg }}
                                </div>
                                {% else %}
                                <label for="password">New Password:</label>
                                <input type="password" class="form-control" name="newpassword" id="password" value="{{users.newpassword}}" required>
                                {% endif %}
                              </div>
                              <div class="form-group">
                                  {% if errors.rpassword %}
                                    <label for="rpassword">Confirm Password:</label>
                                    <input type="password" class="form-control is-invalid" name="rpassword" id="rpassword" required>
                                    <div class="invalid-feedback">
                                            {{ errors.rpassword.msg }}
                                    </div> 
                                  {% else %}
                                    <label for="rpassword">Confirm Password:</label>
                                    <input type="password" class="form-control" name="rpassword" id="rpassword" value="{{users.rpassword}}" required> 
                                   {% endif %}  
                                </div>
                              <button type="submit" class="btn btn-warning btn-block">Confirm Password</button>
                            </form>
                            <p>Already have an account? <a href="/u/signin">Sign-In</a></p>
                            <p>or go <a href="/">home</a></p>
                      </div>
                    </div>
                  
                </div>
        </div>
    </div>
</div>
{% endblock body %}