{% extends "./layout.twig" %}
{% block title %} {{ title }} {% endblock title %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
                {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error }}
                </div>
                {% elseif error_msg %}
                <div class="alert alert-danger" role="alert">
                    {{ error_msg }}
                </div>
                {% elseif success_msg %}
                <div class="alert alert-success" role="alert">
                    {{ success_msg }}
                </div>
                {% else %}
                <br class="d-none d-md-block">
                <br>
                <br>
                {% endif %}
                

                <!-- Jumbotron -->
                <div class="jumbotron">
                  
                    <div class="row">
                      <div class="col-md-8 offset-md-2">
                            <h1 class="mx-auto text-center"><i class="fas fa-unlock"></i>&nbsp; Sign In</h1> 
                            <form action="/u/signin" method="post">
                              <div class="form-group">
                                <label for="email">Email Address:</label>
                                <input type="text" class="form-control" name="username" id="email" placeholder="example@gmail.com" required>
                              </div>
                              <div class="form-group">
                                <label for="pwd">Password:</label>
                                <input type="password" class="form-control" name="password" id="pwd" placeholder="********" required>
                              </div>
                              <button type="submit" class="btn btn-warning btn-block">Sign In</button>
                            </form>
                            <p>Need an account? <a href="/u/signup">Sign-Up</a></p>
                            <p>or go <a href="/">home</a></p>
                      </div>
                    </div>
                  
                </div>
        </div>
    </div>
</div>
{% endblock body %}