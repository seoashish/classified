{% extends "layout.twig" %}
{% block title %} {{ title }} {% endblock title %}
{% block head%}
<link rel="stylesheet" href="/css/custom_home.css">

{% endblock head%}

{% block body %}
<!-- Header Section -->
<div class="d-flex flex-column flex-md-row align-items-md-center bg-whitesmoke p-2">
    <div class="brand pl-2 align-self-center "><a href="/">
    <img src="/img/logo02.png" height="40" alt="logo">
    </a></div>

    <div class="d-flex align-items-center ml-md-auto">
        <p id="post_add" class="font-weight-bold mb-0 mr-5"><a href="/u/add">POST YOUR AD</a></p>
        <p id="login_btn" class="mb-0 ml-auto">
                {% if user %}
                <div class="dropdown">
                <a class="font-weight-bold dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i> USER
                </a>
                      
                     <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item text-limegreen" href="/u/view"><i class="fas fa-th-large fa-fw"></i> Dashboard</a>
                        <a class="dropdown-item text-limegreen" href="/u/signout"><i class="fas fa-power-off fa-fw"></i> Signout</a>
                      </div>
                </div>
                {% else %}
                <a class="signin font-weight-bold" href="/u/signin">SIGN IN</a>
                <a class="signup font-weight-bold" href="/u/signup"> /SIGN UP</a>
                {% endif %}
        </p>
    </div>
</div>
<!-- Header Section end -->

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 bg-limegreen text-light pb-3">
            <span class="display-2">Contact us</span><span class="h4 ml-3">Feel free to contact us</span>
        </div>
    </div>
</div>

<!-- contact form and map -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="rounded bg-lightgray my-4 mx-2 p-2">
            <form action="/contact" method="POST">
                    <div class="form-group">
                        {% if success_msg %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>{{ success_msg }}</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        {% endif %}
                        <label for="name">Name:</label>
                        {% if data.name %}
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value="{{ data.name }}">
                        {% else %}
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address:</label>
                        {% if errors.email %}
                        <input type="text" class="form-control is-invalid" id="email" name="email" placeholder="Enter email" autocomplete="off">
                        <div class="invalid-feedback">
                            {{ errors.email.msg }}
                        </div>
                        {% else %}
                        <input type="text" class="form-control" id="email" name="email" placeholder="Enter email" autocomplete="off" value="{{ data.email }}">
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="mobile">Mobile:</label>
                        {% if errors.mobile %}
                        <input type="text" class="form-control is-invalid" id="mobile" name="mobile" placeholder="Enter Mobile">
                        <div class="invalid-feedback">
                            {{ errors.mobile.msg }}
                        </div>
                        {% else %}
                        <input type="text" class="form-control" id="mobile" name="mobile" placeholder="Enter Mobile" value="{{ data.mobile }}">
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="message">Message:</label>
                        {% if errors.message %}
                        <textarea class="form-control is-invalid" id="message" name="message" rows="4" placeholder="Message"></textarea>
                        <div class="invalid-feedback">
                            {{ errors.message.msg }}
                        </div>
                        {% else %}
                        <textarea class="form-control" id="message" name="message" rows="4" placeholder="Message">{{ data.message }}</textarea>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn bg-limegreen text-light">Send Message</button>
            </form>
            </div>
        </div>
        <div class="col-md-6">
                <div class="rounded bg-lightgray my-4 mx-2 p-2">
                   <iframe class="map-responsive" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3742731.77755678!2d83.39102613797296!3d23.63975913751984!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x398b2386df480857%3A0x62c5b809eee29004!2sJharkhand!5e0!3m2!1sen!2sin!4v1556379680803!5m2!1sen!2sin" width="612" height="454" frameborder="0" style="border:0" allowfullscreen></iframe>   
                </div>
        </div>
    </div>
</div>

<!-- footer section start -->
<div class="container-fluid">
 
      <!--     copyright     -->
      <div class="row bg-limegreen">
          <div class="col-sm-12">
          <p class="text-sm-center text-light m-0">All Rights Reserved <i class="fas fa-copyright"></i> 2019 Jharkhand Classified</p>
          </div>
      </div>
      <!--    copyright end   -->
      
</div>

{% endblock body %}