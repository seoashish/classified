{% extends "./adminLayout.twig" %}
{% block title %}{{title}}{% endblock title %}
{% block head %}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"/>
{% endblock head %}
{% block body %}

<!-- breadcrumb start -->
                <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/a/">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Users</li>
                </ol>
                </nav>
                   
                 
<!-- breadcrumb end -->
    
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 mb-3">
                            <!-- card start -->
                                <div class="card">
                                <div class="d-flex justify-content-between card-header">
                                    <h5>List of Users</h5>
                                </div>
                                <div class="card-body">
                                        <table id="myUsers" class="table table-bordered table-hover" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>Firstname</th>
                                                        <th>Username</th>
                                                        <th>Role</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                
                                                <tfoot>
                                                    <tr>
                                                        <th>Firstname</th>
                                                        <th>Username</th>
                                                        <th>Role</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                    
                                </div>
                                </div>
                            <!-- card end -->    
                        </div>
                    </div>
                </div>


<!-- Modal  viewUser-->
<div class="modal fade" id="viewUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">View User</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div id="myForm">
                  
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
<!-- Modal end -->

<!-- Modal  editUser -->
<div class="modal fade" id="editUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/a/users/edit" method="POST">
            <div class="modal-body">
                    <div id="e-inputUser"> 
                          
                    </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn bg-limegreen text-light" id="e-submit">Edit User</button>
            </div>
           </form>
            </div>
        </div>
    </div>
    <!-- Modal end -->

<!-- Modal  deleteUser -->
<div class="modal fade" id="deleteUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Delete User</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="/a/users/delete" method="POST">
            <div class="modal-body">
              <p><i class="fas fa-question-circle pr-2 text-danger"></i>Do you want to delete this user?</p>
              <div id="deleteForm">

              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-danger">Delete User</button>
            </div>
           </form>
          </div>
        </div>
      </div>
<!-- Modal end -->      

{% endblock body %}
{% block script %}
<script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script src="/js/admin_users.js"></script>
{% endblock script %}                